extends layout

block content

    h2 Enter a new article reference
    form(name="article", action="/articles", method="post")
        p Authors separated by comma
        input(type="text", name="author")
        p Title 
        input(type="text", name="title")
        p Year
        input(type="text", name="year")
        p Book title
        input(type="text", name="booktitle")
        p Publisher 
        input(type="text", name="publisher")
        p
        p#submitText Finished?
        input(type="submit", value="Create")

    
